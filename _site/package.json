{
  "name": "basscraft",
  "version": "1.0.0",
  "description": "Basscss theme",
  "author": "Brent Jackson",
  "license": "MIT",
  "scripts": {
    "css": "cssnext src/basscraft.css css/basscraft.css",
    "watch:css": "cssnext src/basscraft.css css/basscraft.css -w",
    "css:min": "cssnext src/basscraft.css css/basscraft.min.css -c",
    "watch:css:min": "cssnext src/basscraft.css css/basscraft.min.css -c -w",
    "docs": "doctor-mark",
    "watch:docs": "onchange './docs/**/*' -- npm run docs",
    "serve": "http-server -p 8000",
    "start": "npm run watch:docs & npmrun css & npm run watch:css & npm run watch:css:min & npm run serve"
  },
  "dependencies": {
    "basscss-background-images": "0.0.9",
    "basscss-base-buttons": "^1.0.11",
    "basscss-base-forms": "^1.1.2",
    "basscss-base-reset": "^1.0.0",
    "basscss-base-tables": "^1.0.0",
    "basscss-base-typography": "^1.0.1",
    "basscss-borders": "^1.0.2",
    "basscss-button-link": "^1.1.0",
    "basscss-button-outline": "^1.0.1",
    "basscss-button-sizes": "^1.0.5",
    "basscss-button-transparent": "^1.0.1",
    "basscss-color-base": "^1.3.2",
    "basscss-color-forms": "^2.0.3",
    "basscss-color-tables": "^1.0.2",
    "basscss-colors": "^1.0.9",
    "basscss-defaults": "^2.0.1",
    "basscss-grid": "^1.0.2",
    "basscss-input-range": "^1.1.5",
    "basscss-positions": "^1.0.1",
    "basscss-progress": "^1.0.5",
    "basscss-responsive-states": "^1.0.1",
    "basscss-utility-headings": "0.0.6",
    "basscss-utility-layout": "^1.0.0",
    "basscss-utility-typography": "^1.0.1",
    "basscss-white-space": "^1.0.1",
    "flex-object": "latest"
  },
  "devDependencies": {
    "cssnext": "^1.2.3",
    "doctor-mark": "^1.1.0",
    "http-server": "^0.8.0",
    "onchange": "^1.1.0",
    "watch": "^0.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/basscss/basscraft.git"
  },
  "keywords": [
    "css",
    "oocss",
    "basscss",
    "theme",
    "merriweather",
    "roboto",
    "colors"
  ],
  "bugs": {
    "url": "https://github.com/basscss/basscraft/issues"
  },
  "homepage": "https://github.com/basscss/basscraft",
  "doctor_mark": {
    "template": "docs/template.html",
    "stylesheets": [
      "http://fonts.googleapis.com/css?family=Roboto:400,700|Merriweather:400,700",
      "css/basscraft.min.css"
    ]
  }
}
